<?xml version="1.0" encoding="UTF-8" ?>
<Grid
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MemoryGame.Views.CustomControls.FlipView"
    x:Name="FlipViewGrid">
    <ContentView x:Name="FrontView" HeightRequest="90">
        <ContentView.GestureRecognizers>
            <TapGestureRecognizer Tapped="FronView_Tapped"/>
        </ContentView.GestureRecognizers>
    </ContentView>
    <ContentView x:Name="BackView"  HeightRequest="90">
        <ContentView.GestureRecognizers>
            <TapGestureRecognizer Tapped="BackView_Tapped"  />
        </ContentView.GestureRecognizers>
    </ContentView>
</Grid>

