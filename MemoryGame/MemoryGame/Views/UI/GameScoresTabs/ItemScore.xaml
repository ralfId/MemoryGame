<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MemoryGame.Views.UI.GameScoresTabs.ItemScore"
    xmlns:models="clr-namespace:MemoryGame.Models"
    x:DataType="models:GameScores"
    >
    <ContentView.Content>
        <Frame Margin="10" VerticalOptions="Center" Padding="0">
            <Grid ColumnDefinitions="5,*">
                <BoxView HeightRequest="1"  BackgroundColor="Black" VerticalOptions="FillAndExpand"/>

                <Grid Grid.Column="1" RowDefinitions="auto,auto" ColumnDefinitions="*,*,*" Margin="10,5,5,5">
                    <Label Grid.Column="0" Grid.Row="0" Text="Fecha"  FontAttributes="Bold"/>
                    <Label Grid.Column="1" Grid.Row="0" Text="Tiempo" FontAttributes="Bold"/>
                    <Label Grid.Column="2" Grid.Row="0" Text="Movimientos"  FontAttributes="Bold" LineBreakMode="CharacterWrap"/>

                    <Label Grid.Column="0" Grid.Row="1" Text="{Binding GameDate}"  FontAttributes="Bold"/>
                    <Label Grid.Column="1" Grid.Row="1" Text="{Binding GameTime}" FontAttributes="Bold"/>
                    <Label Grid.Column="2" Grid.Row="1" Text="{Binding Moves}"  FontAttributes="Bold" LineBreakMode="CharacterWrap"/>
                </Grid>
            </Grid>


        </Frame>
    </ContentView.Content>
</ContentView>

